<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalResultActivity"
    android:id="@+id/completeLayout"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:background="@drawable/layout_gray"
    >

  <!-- BEGIN guidelines -->
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_05"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.05"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.1"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.2"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_22"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.22"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_25"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.25"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_275"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.275"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.3"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_35"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.35"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_38"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.38"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.4"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_45"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.45"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.5"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_55"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.55"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.6"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_65"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.65"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.7"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.8"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.9"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_ht_95"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.95"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_vt_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.1"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_vt_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.2"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_vt_3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.3"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_vt_4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.4"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_vt_5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.5"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_vt_6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.6"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_vt_7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.7"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_vt_8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.8"
      />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_vt_9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.9"
      />
  <!-- END guidelines -->

  <!-- BEGIN text views -->
  <TextView
      android:id="@+id/txt_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="serif"
      android:text="@string/str_rezultat"
      android:textColor="@color/black"
      android:textSize="30sp"
      android:translationZ="10dp"
      android:transitionName="completeTransition"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_2"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_5"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_5"
      app:layout_constraintTop_toTopOf="parent"
      android:onClick="Reset"
      />
  <!-- END text views -->

  <!-- BEGIN info buttons -->
  <Button
      android:id="@+id/btn_romania"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:background="@drawable/btn_transparent"
      android:backgroundTint="@null"
      android:gravity="center"
      android:text="@string/str_romania"
      android:textAlignment="center"
      android:textSize="25sp"
      android:visibility="visible"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_2"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_2"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_2"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btn_diamond"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:background="@drawable/btn_transparent"
      android:backgroundTint="@null"
      android:gravity="center"
      android:text="@string/str_diamond"
      android:textAlignment="center"
      android:textSize="25sp"
      android:visibility="visible"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_2"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_8"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_8"
      app:layout_constraintTop_toTopOf="parent" />
  <!-- END info buttons -->

  <!-- BEGIN go next objects -->
  <Button
      android:id="@+id/btn_play_final"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:background="@drawable/btn_play"
      android:transitionName="buttonTransition"
      android:onClick="GoToMainActivity"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_7"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_9"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_9"
      app:layout_constraintTop_toTopOf="@+id/guideline_ht_7" />

  <TextView
      android:id="@+id/txt_play_final"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/str_play_final"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="40sp"
      android:translationY="3dp"
      android:translationZ="10dp"
      android:rotation="180"
      android:transitionName="textTransition"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_7"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_9"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_9"
      app:layout_constraintTop_toTopOf="@+id/guideline_ht_7" />
  <!-- END go next objects -->

  <!-- BEGIN calculations -->
  <TextView
      android:id="@+id/txt_afisaj_moneda"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:text="@string/str_hint_lei"
      android:textColor="@color/color_gray_night"
      android:textSize="15sp"
      android:gravity="center"
      android:textAlignment="center"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_35"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_7"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_3"
      app:layout_constraintTop_toTopOf="@+id/guideline_ht_25" />

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/txt_input_layout"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:padding="5dp"
      android:textColorHighlight="#FFFFFF"
      android:textColorHint="@color/color_585858"
      android:textColorLink="@color/color_585858"
      android:textCursorDrawable="?android:attr/textCursorDrawable"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_45"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_9"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_1"
      app:layout_constraintTop_toTopOf="@+id/guideline_ht_3">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txt_input_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:textAlignment="center"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="@color/color_gray_night"
        android:textColorLink="@color/color_gray_night"
        android:textCursorDrawable="?android:attr/textCursorDrawable"
        android:textSize="25sp" />
  </com.google.android.material.textfield.TextInputLayout>

  <Button
      android:id="@+id/btn_euro"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:background="@drawable/euro_list"
      android:backgroundTint="@null"
      android:gravity="center"
      android:onClick="ClickOnEuro"
      android:text="@string/str_euro"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textColorHighlight="@color/color_363636"
      android:textColorLink="@color/color_585858"
      android:textCursorDrawable="@color/color_585858"
      android:textSize="20sp"
      android:textStyle="bold"
      android:visibility="invisible"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_2"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_3"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_3"
      app:layout_constraintTop_toTopOf="@+id/guideline_ht_2"
      />

  <Button
      android:id="@+id/btn_lei"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:background="@drawable/lei_list"
      android:backgroundTint="@null"
      android:text="@string/str_leu"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:textAlignment="center"
      android:gravity="center"
      android:onClick="ClickOnLei"
      android:textStyle="bold"
      android:visibility="invisible"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_2"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_5"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_5"
      app:layout_constraintTop_toTopOf="@+id/guideline_ht_2"
      />

  <Button
      android:id="@+id/btn_franc"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:background="@drawable/franc_list"
      android:backgroundTint="@null"
      android:text="@string/str_franc"
      android:textAllCaps="false"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:textAlignment="center"
      android:gravity="center"
      android:onClick="ClickOnFranc"
      android:textStyle="bold"
      android:visibility="invisible"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_2"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_7"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_7"
      app:layout_constraintTop_toTopOf="@+id/guideline_ht_2"
      />

  <Button
      android:id="@+id/btn_dollar"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:background="@drawable/dollar_list"
      android:gravity="center"
      android:onClick="ClickOnDollar"
      android:text="@string/str_dollar"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:textStyle="bold"
      android:visibility="invisible"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_2"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_1"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_1"
      app:layout_constraintTop_toTopOf="@+id/guideline_ht_2" />

  <Button
      android:id="@+id/btn_pound"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:background="@drawable/pound_list"
      android:gravity="center"
      android:onClick="ClickOnPound"
      android:text="@string/str_pound"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:textStyle="bold"
      android:visibility="invisible"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_3"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_2"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_2"
      app:layout_constraintTop_toTopOf="@+id/guideline_ht_3" />

  <Button
      android:id="@+id/btn_rupee"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:background="@drawable/rupee_list"
      android:gravity="center"
      android:onClick="ClickOnRupee"
      android:text="@string/str_rupee"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:textStyle="bold"
      android:visibility="invisible"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_3"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_8"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_8"
      app:layout_constraintTop_toTopOf="@+id/guideline_ht_3" />

  <Button
      android:id="@+id/btn_ruble"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:background="@drawable/ruble_list"
      android:gravity="center"
      android:onClick="ClickOnRuble"
      android:text="@string/str_ruble"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:textStyle="bold"
      android:visibility="invisible"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_2"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_9"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_9"
      app:layout_constraintTop_toTopOf="@+id/guideline_ht_2" />
  <!-- END calculations -->

  <!-- BEGIN salary info design -->
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/salaryLayout"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:clickable="true"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:transitionName="layoutTransition"
      app:layout_constraintBottom_toTopOf="@+id/guideline_ht_95"
      app:layout_constraintEnd_toStartOf="@+id/guideline_vt_9"
      app:layout_constraintStart_toStartOf="@+id/guideline_vt_1"
      app:layout_constraintTop_toTopOf="@+id/guideline_ht_45">

    <include
        layout="@layout/include_salary_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </include>

  </androidx.constraintlayout.widget.ConstraintLayout>
  <!-- END salary info design -->

  <!-- BEGIN bottom text info -->
  <TextView
      android:id="@+id/txt_info_change"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/str_click_on_lei"
      android:textColor="@color/color_gray_night"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/guideline_ht_95" />
  <!-- END bottom text info -->

</androidx.constraintlayout.widget.ConstraintLayout>